<?xml version="1.0"?>
<launch>

    <!-- Simulation Parameters -->
    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="x_pos" default="0.0"/>
    <arg name="y_pos" default="-15.0"/> <!-- -15 -->
    <arg name="z_pos" default="0.4"/> <!-- 0.4 -->
    <arg name="mode" default="day" doc="mode of the track to load, valid options are 'day' or 'night'"/>

    <!-- Control Node -->
    <node name="motion_controller" pkg="auto_drive_rycsv" type="motion_control.py" output="screen">
        <rosparam command="load" file="$(find auto_drive_rycsv)/config/control_params.yaml"/>
    </node>

    <!-- Set robot description (Robot: Turtlebot3 Waffle) -->
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

    <!-- Gazebo Initialization (Load World) -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find aws_robomaker_racetrack_world)/worlds/racetrack_$(arg mode).world"/> 
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- Spawn Turtlebot -->    
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" 
    args="-urdf -model turtlebot3_$(arg model) 
    -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) 
    -param robot_description" />

    <!-- RViz Launch -->
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
        <arg name="model" value="$(arg model)"/>
    </include>
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find turtlebot3_gazebo)/rviz/turtlebot3_gazebo_model.rviz"/>

    <!-- RQT Reconfigure Node -->
    <node name="reconfigure_gui" pkg="rqt_reconfigure" type="rqt_reconfigure" />

    <!-- RQT image View -->
    <node name="image_gui" pkg="rqt_image_view" type="rqt_image_view" />

</launch>